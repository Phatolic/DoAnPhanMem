
@{
    ViewBag.Title = "LayTenBS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<string>

@{ var kh = Session["Taikhoan"] as DAPM.Models.KHACHHANG;}
<div class="row">
    <div class="offset-md-1 col-md-10">
        
        @using (Html.BeginForm("LayTenBS", "DatKham", FormMethod.Post))
        {@Html.ValidationSummary(true)
        if (kh != null)
        {
            <div class="form-group">
                <label>Số điện thoại:</label>
                <div>@Html.DisplayFor(model => kh.SDT)</div>
                @Html.Hidden("SDT", kh.SDT)
            </div>


            <div class="form-group">
                <label for="ngaygio">Ngày giờ:</label> @Html.TextBox("NgayGio", null, new { @class = "form-control", @id = "ngaygio", type = "date", placeholder = "mm/dd/yyyy" })
            </div>
            <div class="form-group">
                <label for="ghichu">Ghi Chú:</label> @Html.TextBox("GhiChu", null, new { @class = "form-control", @id = "ghichu" })
            </div>

            <div class="form-group">
                <label for="tenbacsi" >Tên Bác Sĩ:</label>
                <div style="display:inline-block;max-width:300px;">
                    @Html.ListBox("TenBS", new SelectList(Model), new { @class = "form-control", @id = "tenbacsi", required = "required"})
                </div>
            </div>


            <button type="submit" class="btn btn-primary">ĐẶT KHÁM</button>
        }
        if (kh == null)
        {
            <p style="color:red;margin-top:20px;"> Vui lòng đăng nhập để đăng ký khám.<a href="@Url.Action("DangNhap", "User")"> Đăng nhập tại đây.</a></p>
        }
    }

    </div>
</div>


