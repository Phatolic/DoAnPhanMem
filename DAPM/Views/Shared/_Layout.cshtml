                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Home/About"> Về Chúng Tôi</a>
                                    </li>

                                </ul>
                            </div>
                            @{ var kh = Session["Taikhoan"] as DAPM.Models.KHACHHANG;}
