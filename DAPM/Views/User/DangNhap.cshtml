
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutTaiKhoan.cshtml";


}

@section head{
    <style type="text/css">
        body {
            background-image: url('/images/background.jpg');
            margin: 0;
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center; /* Đảm bảo ảnh nền được căn giữa */
        }
    </style>
   
}

<h2 style="text-align: center">ĐĂNG NHẬP</h2>
<br />
<div class="row">
    <div class="offset-md-1 col-md-10">
        <h2 style="color: red;">@ViewBag.ThongBao</h2>
        @using (Html.BeginForm("DangNhap", "User"))
        {@Html.ValidationSummary(true)
        <div class="form-group">
            <label for="dienthoai">Số điện thoại:</label> @Html.TextBox("SDT", null, new { @class = "form-control", @id = "dienthoai", required = "required" })
        </div>
        <div class="form-group">
            <label for="matkhau">Mật khẩu:</label> @Html.Password("MatKhau", null, new { @class = "form-control", @id = "matkhau", required = "required" })
        </div>
        <button type="submit" class="btn btn-primary">ĐĂNG NHẬP</button>
    }
        <p style="text-align:center">Không có tài khoản? <a href="@Url.Action("DangKy", "User")" >Đăng ký</a></p>
    </div>
</div>


